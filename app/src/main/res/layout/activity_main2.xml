                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 1"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 2"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 3"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 4"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 5"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 6"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 7"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuento 8"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:textColor="@android:color/holo_red_light"
                        android:textSize="20dp"
                        android:layout_margin="10dp"
                        android:background="@color/letrasVerdes"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
